<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/background"
    tools:context="com.lucassena.festafimdeano.views.DetailsActivity">


    <TextView
        android:id="@+id/text_label_voc_vai_participar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voc_vai_participar"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_label_voc_vai_participar"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:id="@+id/check_participate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/sim_vamos_nessa"
        android:textSize="30sp"/>

</RelativeLayout>
